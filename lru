# To maintain the order od the data using OrderDict
from collections import OrderedDict
class LRUCache:

    def __init__(self, capacity):
        """
        :type capacity: int
        """  
        self.sz = capacity
        self.storage=OrderedDict()       
                                        
    def get(self, key) :
        """
        :type key: int
        :rtype: int
        """
        if key in self.storage:
            value = self.storage[key]
           
            # For shifting the position of the value from the current
            del self.storage[key]
            # Adding the same value to the last position
            self.storage[key] = value
           
            return value
        return -1

    def put(self, key, value) :
        """
        :type key: int
        :type value: int
        :rtype: None
        """ 
        # Checking for existing element in the dict               
        if key in self.storage:            
            del self.storage[key]
            self.storage[key] = value
            print(self.storage)
        
        #  If capacity not exist append at the last  
        elif len(self.storage) < self.sz:       
            self.storage[key] = value     
            print(self.storage) 

        # If capacity extend delete first item shift all      
        else:
            self.storage.popitem(last=False) 
            self.storage[key] = value
            print(self.storage)

object = LRUCache(3)
object.put(1,1)
object.put(2,2)
object.put(3,3)
object.put(4,4)

object.put(4,7)

object.get(4)

object.put(5,6)

object.get(1)
